{
    "env": {
        "gameVersion": "1.21.7"
     },
     "lint": {
        "undeclaredSymbol": [
            {
                "if": [
                    {
                        "pattern": "ntils.(z.(const|global|singularity.flag)|API)"
                    }
                ],
                "then": {
                    "declare": "block"
                }
            },
            {
                "if": [
                    {
                        "pattern": "ntils:singularity/error"
                    }
                ],
                "then": {
                    "declare": "block"
                }
            },
            {
                "if": [
                    {
                        "category": ["score_holder", "dimension", "tag"]
                    }
                ],
                "then": {
                    "declare": "block"
                }
            },
    
            {
                "then": { "report": "warning" }
            }
        ]
     }
    }